@* Pages/Shared/_Modal.cshtml *@
<div class="modal fade" id="appModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-3 shadow" style="background-color: #f8f9fa;">
      <div class="modal-header border-0" style="background-color: #ffffff;">
        <h5 class="modal-title text-dark">Tiêu đề</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
      </div>
      <div class="modal-body p-4">
        <!-- Nội dung động sẽ được đặt vào đây -->
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Đóng</button>
        <button type="button" class="btn text-white rounded-pill" id="appModalOkBtn" style="background-color: #28a745 !important;">OK</button>
      </div>
    </div>
  </div>
</div>
