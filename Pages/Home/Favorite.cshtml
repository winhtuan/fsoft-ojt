@page
@model Plantpedia.Pages.Home.FavoriteModel
@{
    ViewData["Title"] = "Cây trồng yêu thích";
}

@section Styles {
    <link rel="stylesheet" href="~/css/search-page.css" asp-append-version="true" />
    <style>
        .page-title {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                "Helvetica Neue", Arial, sans-serif;
            font-size: 2rem;
            font-weight: 600;
            color: #333;
            letter-spacing: normal;
            text-align: left;
            margin-top: 40px;
            margin-bottom: 30px;
            padding-left: 15px;
            border-left: 5px solid #28a745;
            margin-left: 0;
            margin-right: 0;
        }
    </style>
}

<div class="container">
    <p class="page-title">Danh sách cây trồng yêu thích</p>
</div>

<div class="container plant-card-section mb-5">
    <div class="row justify-content-center">
        <partial name="_CardPatial" model="Model.FavoritePlants" />
    </div>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-auto">
        <partial name="_Paging" model="Model.Paging" />
    </div>
</div>

<div id="no-favorite" class="alert alert-info d-none">
    Bạn chưa có cây nào trong danh sách yêu thích.<br>
    Hãy thêm những cây bạn quan tâm nhé!
</div>

@section Scripts {
    <script>
        (function () {
            const requireLogin = '@((ViewData["RequireLogin"] as bool?) == true ? "true" : "false")';
            const loginUrl = '@(ViewData["LoginUrl"] ?? "#")';

            if (requireLogin === "true") {
                window.modalHelper.show({
                    title: "Cần đăng nhập",
                    body: `
                        <div class="mb-2">Bạn cần đăng nhập để xem danh sách cây yêu thích.</div>
                    `,
                    footerHtml: `
                        <a href="${loginUrl}" class="btn text-white rounded-pill" style="background-color:#28a745 !important;">Đăng nhập</a>
                        <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Để sau</button>
                    `,
                    size: "md"
                });

                document.getElementById("no-favorite")?.classList.remove("d-none");
            }
        })();
    </script>

    <script src="~/js/favorite.js" asp-append-version="true"></script>
}
